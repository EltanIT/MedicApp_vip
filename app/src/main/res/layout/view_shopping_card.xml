<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="12dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            >
            <TextView
                android:id="@+id/name"
                android:layout_alignParentLeft="true"
                android:layout_alignLeft="@id/delete_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ПЦР-тест на определение РНК коронавируса стандартный"
                android:paddingEnd="32dp"
                android:textSize="16sp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:lineHeight="20dp"
                android:textFontWeight="500"
                android:maxLines="2"
                android:lines="2"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/delete_item"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/close_ic"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2 дня"
                    android:textColor="@color/Caption"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:lines="1"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    />
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1800 ₽"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:lineHeight="24dp"
                    android:lines="1"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    />
            </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:gravity="center_vertical"
               >
               <TextView
                   android:id="@+id/count_patient"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="1"
                   android:textColor="@color/black"
                   android:textSize="16sp"
                   android:textStyle="normal"

                   />

               <TextView
                   android:id="@+id/text1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginEnd="12dp"
                   android:text=" пациент"
                   android:textColor="@color/black"
                   android:textSize="16sp"
                   android:textStyle="normal"

                   />
               <androidx.cardview.widget.CardView
                   android:id="@+id/add_remove_patient_cv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:cardCornerRadius="12dp"
                   android:backgroundTint="@color/Input_Stroke"
                   >
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:id="@+id/remove_patient_button"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/minus_ic"
                           android:padding="8dp"/>
                       <View
                           android:layout_width="0.8dp"
                           android:layout_height="match_parent"
                           android:background="#B8C1CC"
                           android:layout_marginVertical="8dp"
                           />
                       <ImageView
                           android:id="@+id/add_patient_button"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/add_ic"
                           android:padding="8dp"/>

                   </LinearLayout>

               </androidx.cardview.widget.CardView>
           </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>