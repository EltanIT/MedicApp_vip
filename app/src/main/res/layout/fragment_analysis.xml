<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.AnalysisFragment">

    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/search_et"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/et_style_default"
            android:hint="Искать анализы"
            android:drawableLeft="@drawable/search_ic"
            android:padding="8dp"
            android:drawablePadding="8dp"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/black"
            android:imeOptions="actionSearch"
            android:inputType="text"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/shopping_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="16dp"
        android:background="@color/white"
        android:paddingVertical="22dp"
        android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/et_style_default"
            android:backgroundTint="@color/accent"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:isScrollContainer="false"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shopping_card_ic"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="В корзину"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:textSize="17sp"
                    android:lineHeight="24dp"
                    android:textAlignment="center"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                >
                <TextView
                    android:id="@+id/price_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:textSize="17sp"
                    android:lineHeight="24dp"
                    android:textAlignment="textEnd"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ₽"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:textSize="17sp"
                    android:lineHeight="24dp"
                    android:textAlignment="textEnd"
                    />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintBottom_toTopOf="@id/shopping_view"
        android:scrollbars="none"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Акции и новости"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:textColor="@color/Description"
                    android:textSize="17sp"
                    android:lineHeight="24dp"
                    android:layout_marginHorizontal="16dp"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:id="@+id/news_rv"
                    tools:listitem="@layout/view_new"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Каталог анализов"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:textColor="@color/Description"
                    android:textSize="17sp"
                    android:lineHeight="24dp"
                    android:layout_marginHorizontal="16dp"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:id="@+id/category_rv"
                    tools:listitem="@layout/view_category"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:id="@+id/analysis_rv"
                    tools:listitem="@layout/view_analysis"
                    tools:itemCount="5"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>