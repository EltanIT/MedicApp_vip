<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.CreateCardFragment">


    <TextView
        android:id="@+id/miss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пропустить"
        android:textColor="@color/blue_main"
        android:textSize="20sp"
        android:textFontWeight="600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"

        />
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/miss"
        >
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создание карты \nпациента"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            android:lines="2"
            />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Без карты пациента вы не сможете заказать анализы."
            android:textColor="@color/Caption"
            android:textSize="14sp"
            android:layout_marginTop="13dp"
            />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="В картах пациентов будут храниться результаты анализов вас и ваших близких."
            android:textColor="@color/Caption"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/et_style_selector"
            android:layout_marginTop="20dp"
            android:hint="Имя"
            android:textColor="@color/black"
            android:paddingHorizontal="16dp"
            />

        <EditText
            android:id="@+id/et_middlename"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/et_style_selector"
            android:layout_marginTop="20dp"
            android:hint="Отчество"
            android:textColor="@color/black"
            android:paddingHorizontal="16dp"
            />

        <EditText
            android:id="@+id/et_lastname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/et_style_selector"
            android:layout_marginTop="20dp"
            android:hint="Фамилия"
            android:textColor="@color/black"
            android:paddingHorizontal="16dp"
            />
        <EditText
            android:id="@+id/et_birthday"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/et_style_selector"
            android:layout_marginTop="20dp"
            android:hint="Дата рождения"
            android:textColor="@color/black"
            android:paddingHorizontal="16dp"
            android:inputType="date"
            />

        <Spinner
            android:id="@+id/floor_s"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/et_style_selector"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="16dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/btn_selector_style"
            android:text="Создать"
            android:textSize="17sp"
            android:textColor="@color/white"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"

            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>