<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/save"

        android:scrollbars="none"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Карта пациета"
                android:fontFamily="@font/sf_pro_display_heavy"
                android:textSize="24sp"
                android:lineHeight="28dp"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/icon_click"
                android:layout_width="148dp"
                android:layout_height="123dp"
                app:cardCornerRadius="60dp"
                android:layout_marginTop="16dp"
                app:cardElevation="0dp"
                android:backgroundTint="@color/Caption_50">
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_profile_icon_ic"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Без карты пациента вы не сможете заказать анализы."
                android:textColor="@color/Caption"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textSize="14sp"
                android:lineHeight="20dp"
                android:layout_marginTop="8dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="В картах пациентов будут храниться результаты анализов вас и ваших близких."
                android:textColor="@color/Caption"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textSize="14sp"
                android:lineHeight="20dp"
                android:layout_marginTop="8dp"

                />
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="В картах пациентов будут храниться результаты анализов вас и ваших близких."
                android:textColor="@color/Caption"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/et_style_selector"
                android:layout_marginTop="20dp"
                android:hint="Имя"
                android:textColor="@color/black"
                android:paddingHorizontal="16dp"
                />

            <EditText
                android:id="@+id/et_middlename"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/et_style_selector"
                android:layout_marginTop="20dp"
                android:hint="Отчество"
                android:textColor="@color/black"
                android:paddingHorizontal="16dp"
                />

            <EditText
                android:id="@+id/et_lastname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/et_style_selector"
                android:layout_marginTop="20dp"
                android:hint="Фамилия"
                android:textColor="@color/black"
                android:paddingHorizontal="16dp"
                />
            <EditText
                android:id="@+id/et_birthday"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/et_style_selector"
                android:layout_marginTop="20dp"
                android:hint="Дата рождения"
                android:textColor="@color/black"
                android:paddingHorizontal="16dp"
                />

            <Spinner
                android:id="@+id/floor_s"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/et_style_selector"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="16dp"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/btn_selector_style"
        android:text="Сохранить"
        android:textSize="17sp"
        android:textColor="@color/white"
        style="?android:attr/borderlessButtonStyle"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>